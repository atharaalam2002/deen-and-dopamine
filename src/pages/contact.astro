---
import Base from "../layouts/BaseLayout.astro";
---
<Base title="Contact â€” Deen & Dopamine" current="/contact">
  <main class="max-w-3xl mx-auto px-4 py-14">
    <h1 class="text-3xl font-extrabold tracking-tight">Contact</h1>
    <p class="mt-3 text-slate-300">Want to collaborate, request a topic, or invite a talk?</p>
    <form name="contact" method="POST" netlify data-netlify="true" class="mt-8 grid gap-4 bg-slate-900/60 p-6 rounded-2xl ring-1 ring-white/10">
      <input type="hidden" name="form-name" value="contact" />
      <input class="px-4 py-3 rounded-xl bg-slate-800/60 ring-1 ring-white/10" name="name" placeholder="Name" required />
      <input class="px-4 py-3 rounded-xl bg-slate-800/60 ring-1 ring-white/10" name="email" placeholder="Email" type="email" required />
      <textarea class="px-4 py-3 rounded-xl bg-slate-800/60 ring-1 ring-white/10 min-h-[120px]" name="message" placeholder="Message" required></textarea>
      <button class="justify-self-start px-5 py-3 rounded-2xl bg-brand-500 hover:bg-brand-600 text-slate-900 font-semibold shadow-glow">Send</button>
    </form>
  </main>
</Base>
